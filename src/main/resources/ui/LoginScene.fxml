<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<BorderPane
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.sogilis.idfx.callback.LoginCallbacks"
    prefHeight="400.0"
    prefWidth="600.0"
>
    <top>
        <HBox alignment="BASELINE_RIGHT">
            <ImageView onMouseClicked="#setFrench">
                <Image url="/flag/fr.png"/>
            </ImageView>
            <ImageView onMouseClicked="#setEnglish">
                <Image url="/flag/en.png"/>
            </ImageView>
        </HBox>
    </top>

    <center>
        <GridPane
            alignment="CENTER"
            hgap="10"
            vgap="10"
        >
            <padding>
                <Insets top="25" right="25" bottom="10" left="25"/>
            </padding>
            <Text
                id="welcome-text"
                text="%login-welcome-text"
                GridPane.columnIndex="0"
                GridPane.rowIndex="0"
                GridPane.columnSpan="2"
                style="-fx-font-weight: bold"
                GridPane.halignment="CENTER"
            >
                <GridPane.margin>
                    <Insets bottom="15"/>
                </GridPane.margin>
            </Text>
            <Label
                text="%login-label-agent"
                GridPane.columnIndex="0"
                GridPane.rowIndex="1"
                minWidth="120"
            />
            <TextField
                fx:id="agentId"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1"
            />
            <Label
                text="%login-label-password"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2"
            />
            <PasswordField
                fx:id="agentPassword"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2"
            />
            <HBox
                spacing="10"
                alignment="BOTTOM_RIGHT"
                GridPane.columnIndex="1"
                GridPane.rowIndex="4"
            >
                <Button
                    id="connection-button"
                    text="%login-button-connection"
                    onAction="#onConnectionPressed"
                    minWidth="120"
                />
            </HBox>
        </GridPane>
    </center>
</BorderPane>

