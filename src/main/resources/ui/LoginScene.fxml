<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.sogilis.idfx.callback.LoginCallbacks"
        prefHeight="400.0"
        prefWidth="600.0"
>

    <top>
        <HBox
                xmlns="http://javafx.com/javafx"
                xmlns:fx="http://javafx.com/fxml"
                alignment="BASELINE_RIGHT"
        >

            <ImageView onMouseClicked="#setFrench">
                <image>
                    <Image url="/flag/fr.png" />
                </image>
            </ImageView>

            <ImageView onMouseClicked="#setEnglish">
                <image>
                    <Image url="/flag/en.png" />
                </image>
            </ImageView>

        </HBox>
    </top>

    <center>
        <GridPane>
            <Text
                    id="welcome-text"
                    text="%login-welcome-text"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0"
                    GridPane.columnSpan="2"
            />

            <Label
                    text="%login-label-agent"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="1"
            />

            <TextField
                    fx:id="agentId"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="1"
            />

            <Label
                    text="%login-label-password"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="2"
            />

            <PasswordField
                    fx:id="agentPassword"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="2"
            />

            <HBox
                    spacing="10"
                    alignment="BOTTOM_RIGHT"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="4"
            >

                <Button
                        id="connection-button"
                        text="%login-button-connection"
                        onAction="#onConnectionButton"
                />

            </HBox>
        </GridPane>
    </center>

</BorderPane>

